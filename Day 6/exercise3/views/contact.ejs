<body class="m-0 p-0 border-box bg-indigo-800 flex flex-col justify-center items-center min-h-screen min-w-screen">
    <nav class="flex justify-end items-stretch w-screen fixed top-0 p-4">
        <a href="/"
            class="font-bold text-xl uppercase hover:rounded-md hover:bg-white hover:bg-opacity-25 px-4 py-2 text-white nav-link">home</a>
        <a href="/about"
            class="font-bold text-xl uppercase hover:rounded-md hover:bg-white hover:bg-opacity-25 px-4 py-2 text-white nav-link">about</a>
        <a href="/contact"
            class="font-bold text-xl uppercase hover:rounded-md hover:bg-white hover:bg-opacity-25 px-4 py-2 text-white nav-link">contact</a>
