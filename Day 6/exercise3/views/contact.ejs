    <main class="flex flex-col justify-center items-stretch w-1/2">
        <h1 class="text-4xl font-bold text-white mb-4">I want to hear your thoughts</h1>
        <form action="mailto:gianthiam126@gmail.com" class="flex flex-col justify-around align-stretch mb-4">
            <textarea name="message" id="" cols="30" rows="10"
                class="bg-opacity-50 bg-white p-4 text-white mb-2 placeholder:text-white text-xl"
                placeholder="Send me a message..."></textarea>
            <button type="submit"
                class="rounded-md bg-yellow-500 text-white font-bold text-xl py-2 align-end hover:bg-yellow-300">Send</button>
        </form>
        <section class="flex flex-col justify-center items-center">
            <a href="https://www.facebook.com/gnrfl"><i class="bi bi-facebook text-white hover:text-yellow-500 text-4xl"></i></a>
        </section>
